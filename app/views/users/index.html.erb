<div id="search" class="row">
  <%= render partial: 'search_form' %>
  <h1><%= t('sufia.product_name') %> Users</h1>
</div>

<div id="Data">

  <table class="table table-striped" style="border: 1px solid #DDD;"> 

    <thead> 
      <th style="border: 1px solid #DDD; text-align: left;">Avatar</th> 
      <th class="sorts" style="border: 1px solid #DDD; text-align: left;"><i id="name" class="<%=params[:sort].blank? ? 'caret up' : params[:sort]== "name desc" ? 'caret' : params[:sort]== "name" ? 'caret up' : ''%>"></i>User Name</th>
      <th class="sorts" style="border: 1px solid #DDD; text-align: left;"><i id="login" class="<%=params[:sort]== "login desc" ? 'caret' : params[:sort]== "login" ? 'caret up' : ''%>"></i>User Id</th>
      <th class="sorts" style="border: 1px solid #DDD; text-align: left;"><i id="department" class="<%=params[:sort]== "department desc" ? 'caret' : params[:sort]== "department" ? 'caret up' : ''%>"></i>Department</th>
      <th style="border: 1px solid #DDD; text-align: left;">Files Deposited</th>       
    </thead> 

    <tbody> 
      <% @users.each do |user| %> 
        <tr class="<%= cycle("","zebra") %>" style="border: 1px solid #DDD;"> 
         <td style="border: 1px solid #DDD;"><a href="<%= sufia.profile_path(user) %>" class="btn btn-sm " ><%= image_tag user.avatar.url(:thumb), width: 30 %></a></td> 
         <td  style="border: 1px solid #DDD;"><a href="<%= sufia.profile_path(user) %>"  ><%= user.name %><a></td> 
         <td style="border: 1px solid #DDD;"><a href="<%= sufia.profile_path(user) %>"  ><%= user.user_key %><a></td>
         <td style="border: 1px solid #DDD;"><%= user.department %> </td> 
         <td style="border: 1px solid #DDD;"><%= number_of_deposits(user) %> </td>
        </tr> 
      <% end %> 
    </tbody> 

  </table> 

  <div class="pager">
    <%= paginate @users,  theme: 'blacklight', route_set: sufia%>
  </div>

</div> 